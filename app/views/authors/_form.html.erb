<%= form_tag("/author") do %>
    <% if @author.errors.full_messages.any? %>
        <div id='error_explanation'>
            <h2>
                <%= pluralize(@author.errors.full_messages.count, "error") %>
                prohibited this author from being saved:
            </h2>

            <ul>
            <% @author.errors.full_messages.each do |msg|%>
                <li><%= msg %></li>
            <% end %>

            </ul>

        </div>
    <% end %>
<% end %>